{% extends "layout.njk" %}
{% block head%}
    <title>Proff | Register
    </title>
    {% endblock%}
    {% block content %}
        <form class="card" method="POST" action="/teachers">
            <section class="avatar" style="background: url(https://source.unsplash.com/collection/8874679/500x500) no-repeat  center center / cover"></section>
            <section class="details">

                <h3>Novo Professor(a)</h3>

                <div class="item ite-bord">
                    <div>
                        Avatar URL</div>
                    <div>
                        <input type="url" name="avatar_url" placeholder="http://">
                    </div>
                </div>

                <div class="item">
                    <div>
                        Instrutor
                    </div>
                    <div class="ite-bord">
                        <input type="text" name="name" placeholder="Nome do Professor(a)">
                    </div>
                </div>

                <div class="item">
                    <div>
                        Data de Nascimento
                    </div>
                    <div class="ite-bord">
                        <input type="date" name="birth">
                    </div>
                </div>

                <div class="item">
                    <div>
                        Sexo
                    </div>
                    <div class="ite-bord">
                        <span><input type="radio" name="gender" value="M">
                            Masculino</span>
                        <span><input type="radio" name="gender" value="F">
                            Feminino</span>
                    </div>
                </div>

                <div class="item">
                    <div>
                        Grau de Escolaridade
                    </div>
                    <div class="ite-bord">
                        <select name="escolaridade">
                            <option value="select">Selecione</option>
                            <option value="MC">Ensino Médio Completo</option>
                            <option value="SC">Ensino Superior Completo</option>
                            <option value="MD">Mestrado e Doutorado</option>
                        </select>
                    </div>
                </div>

                <div class="item">
                    <div>
                        Type Learn
                    </div>
                    <div class="ite-bord">
                        <span><input type="radio" name="type_learn" value="presencial">
                            Presencial</span>
                        <span><input type="radio" name="type_learn" value="distancia">
                            Distancia</span>
                    </div>
                </div>

                <div class="item">
                    <div>
                        Skils
                    </div>
                    <div class="ite-bord">
                        <input type="text" name="learn" placeholder="Separe os serviços prestados por virgula">
                    </div>
                </div>
                <button type="submit">Salvar</button>
            </section>
        </form>

    {% endblock content %}