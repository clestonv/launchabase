{% extends "layout.njk" %}

{% block content %}
    <div class="card table-container">
        <a href="/members/create">
            <span class="material-icons">add</span>Member
        </a>
        <table width="100%">
            <thead>
                <tr>
                    <th>Member</th>
                    <th>Email</th>
                    <th>Peso</th>
                    <th>Altura</th>
                    <th>Ação</th>
                </tr>
            </thead>
            
            <tbody>
                {% for member in members %}
                <tr>
                    <td>
                        <span style="background-image: url({{member.avatar_url}})"></span>
                        {{ member.name }}</td>
                    <td><span>{{ member.email }}</span></td>
                    <td><span>{{ member.weight }}</span></td>
                    <td><span>{{ member.height }}</span></td>
                    <td><a href="/members/{{member.id}}"><span class="material-icons">visibility</span></a></td>
                </tr>  
                {% endfor %}                              
            </tbody>
        </table>
    </div>

    
{% endblock content %}
