{% extends "layout.njk" %}

{% block content %}
    <div class="card table-container">
                <div class="header">
            <a class="button" href="/members/create">
                <span class="material-icons">add</span>Membro               
            </a>
            <form action="/members" method="GET">
                    <input 
                        type="text"
                        name="filter"
                        placeholder="Nome ou Atendimento"
                        value={{filter}}
                    >
                    <button type="submit">Filtrar</button>
            </form>
        </div>

        <table width="100%">
            <thead>
                <tr>
                    <th>Member</th>
                    <th>Email</th>
                    <th>Peso</th>
                    <th>Altura</th>
                    <th>Ação</th>
                </tr>
            </thead>
            
            <tbody>
                {% for member in members %}
                <tr>
                    <td>
                        <span style="background-image: url({{member.avatar_url}})"></span>
                        {{ member.name }}</td>
                    <td><span>{{ member.email }}</span></td>
                    <td><span>{{ member.weight }}kg</span></td>
                    <td><span>{{ member.height }}cm</span></td>
                    <td><a href="/members/{{member.id}}"><span class="material-icons">visibility</span></a></td>
                </tr>  
                {% endfor %}                              
            </tbody>
        </table>
        
        <div class="pagination"
            data-page={{ pagination.page }}
            data-total={{ pagination.total }}
            data-filter={{filter}}
        ></div>
    </div>

            P
{% endblock content %}
