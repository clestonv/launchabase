{% extends "layout.njk"%}

{% block head%}
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
{% endblock %}

{% block content %}
    <h1 class="title-content">Conte√∫dos</h1>
    <div class="content">

        {% for item in items %}
            <div class="card" id="{{item.id}}">
                <img src="{{item.img}}" alt="">
                <h2>{{item.title}}</h2>
                <p>
                    {{item.description}}
                </p>
                <button>
                    {{item.price}}
                </button>
            </div>
            {% endfor %}

        </div>

        <div class="modal-overlay">
            <div class="modal minimize">
                <a class="close-modal icons">
                    <i class="material-icons">close</i>
                </a>
                <a class="minimize-modal icons">
                    <i class="material-icons">minimize</i>
                </a>
                <a class="maximize-modal">
                    <i class="material-icons">maximize</i>
                </a>
                <div class="modal-content">
                    <iframe src="https://rocketseat.com.br/launchbase" frameborder="0"></iframe>
                </div>
            </div>
        </div>

        <script src="scripts/script.js"></script>
    {% endblock %}